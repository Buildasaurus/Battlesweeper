<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BattleSweeper.Views.BattleShipsView"
			 xmlns:sys="clr-namespace:System;assembly=mscorlib"
			 >
	<UserControl.Resources>
		<sys:Double x:Key="width">30</sys:Double>
	</UserControl.Resources>

	<Grid Background="LightBlue" RowDefinitions="1*,8*" ColumnDefinitions="*, *">
		<Label>hello</Label>
		<Border
            Padding="10,2"
            Background="Blue"
            BorderBrush="LightBlue"
            BorderThickness="2"
            BoxShadow="0 1 20 5 LightBlue"
			Grid.ColumnSpan = "2">
			
		</Border>
		<StackPanel Orientation="Horizontal" Margin="10" Spacing="10">
			<StackPanel Grid.Row="0" Grid.Column ="0" Orientation="Horizontal">
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}" RenderTransform ="rotate(90deg)"></Image>
				<Image Source="/Assets/midShip.png" Width ="{StaticResource width}" RenderTransform ="rotate(90deg)"></Image>
				<Image Source="/Assets/midShip.png" Width ="{StaticResource width}"  RenderTransform ="rotate(90deg)"></Image>
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}"  RenderTransform ="rotate(270deg)"></Image>
			</StackPanel>
			
			<StackPanel Grid.Row="0" Grid.Column ="0" Orientation="Horizontal">
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}" RenderTransform ="rotate(90deg)"></Image>
				<Image Source="/Assets/midShip.png" Width ="{StaticResource width}"  RenderTransform ="rotate(90deg)"></Image>
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}"  RenderTransform ="rotate(270deg)"></Image>
			</StackPanel>
			
			<StackPanel Grid.Row="0" Grid.Column ="0" Orientation="Horizontal">
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}" RenderTransform ="rotate(90deg)"></Image>
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}"  RenderTransform ="rotate(270deg)"></Image>
			</StackPanel>

			<StackPanel Grid.Row="0" Grid.Column ="0" Orientation="Horizontal">
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}" RenderTransform ="rotate(90deg)"></Image>
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}"  RenderTransform ="rotate(270deg)"></Image>
			</StackPanel>
			<StackPanel Grid.Row="0" Grid.Column ="0" Orientation="Horizontal">
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}" RenderTransform ="rotate(90deg)"></Image>
				<Image Source="/Assets/ShipEnd.png" Width ="{StaticResource width}"  RenderTransform ="rotate(270deg)"></Image>
			</StackPanel>

		</StackPanel>
		
		<Viewbox Grid.Row="1" Grid.Column="0" Stretch="Uniform">
			<Grid x:Name="Player1Grid" Margin="0" />
		</Viewbox>
		<Viewbox Grid.Row="1" Grid.Column="1" Stretch="Uniform">
			<Grid x:Name="Player2Grid" Margin="0" />
		</Viewbox>
	</Grid>
	
</UserControl>
